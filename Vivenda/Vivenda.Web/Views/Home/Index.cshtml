                                       style="border: none; background: transparent; padding: 1rem 1.5rem; font-size: 1rem; box-shadow: none;">
                                <button type="submit" 
                                        class="btn btn-primary" 
                                        style="border-radius: 50px; padding: 0.875rem 2rem; margin-right: 0.25rem; background: #d4941e; border: none; font-weight: 600;">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

