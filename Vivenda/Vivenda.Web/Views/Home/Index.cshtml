@model Vivenda.Web.Models.HomeViewModel
@using Vivenda.BLL.DTOs
@{
    ViewData["Title"] = "Home";
}

<style>
    /* Hero Section */
    .hero {
        background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        padding: 5rem 0;
        position: relative;
        overflow: hidden;
    }

    .hero::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 600px;
        height: 600px;
        background: radial-gradient(circle, rgba(37,99,235,0.08) 0%, transparent 70%);
        border-radius: 50%;
    }

    .hero-content { position: relative; z-index: 1; }

    .hero-title {
        font-size: 3rem;
        font-weight: 700;
        color: #111;
        line-height: 1.2;
        letter-spacing: -1px;
        margin-bottom: 1rem;
    }

    .hero-subtitle {
        font-size: 1.125rem;
        color: #666;
        margin-bottom: 2rem;
        max-width: 500px;
    }

    /* Search Box */
    .search-box {
        background: #fff;
        border-radius: 12px;
        padding: 1.5rem;
        box-shadow: 0 4px 24px rgba(0,0,0,0.08);
        border: 1px solid #e5e5e5;
    }

    .search-box .form-control,
    .search-box .form-select {
        border: 1px solid #e5e5e5;
        border-radius: 8px;
        padding: 0.75rem 1rem;
        font-size: 0.9375rem;
    }

    .search-box .form-control:focus,
    .search-box .form-select:focus {
        border-color: #2563eb;
        box-shadow: 0 0 0 3px rgba(37,99,235,0.1);
    }

    .search-box .btn-primary {
        padding: 0.75rem 2rem;
        font-weight: 600;
    }

    /* Stats */
    .stats-section {
        padding: 3rem 0;
        background: #fff;
        border-bottom: 1px solid #e5e5e5;
    }

    .stat-item { text-align: center; }
    .stat-number { font-size: 2rem; font-weight: 700; color: #111; }
    .stat-label { font-size: 0.875rem; color: #666; text-transform: uppercase; letter-spacing: 0.5px; }

    /* Section */
    .section { padding: 4rem 0; }
    .section-header { margin-bottom: 2rem; }
    .section-title { font-size: 1.5rem; font-weight: 700; color: #111; margin-bottom: 0.25rem; }
    .section-subtitle { color: #666; font-size: 0.9375rem; }

    /* Property Card */
    .property-card {
        border: 1px solid #e5e5e5;
        border-radius: 12px;
        background: #fff;
        overflow: hidden;
        transition: all 0.2s ease;
        height: 100%;
    }

    .property-card:hover {
        border-color: #ddd;
        box-shadow: 0 8px 24px rgba(0,0,0,0.06);
        transform: translateY(-2px);
    }

    .property-card .img-wrapper {
        position: relative;
        height: 200px;
        overflow: hidden;
    }

    .property-card .img-wrapper img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .property-card:hover .img-wrapper img {
        transform: scale(1.05);
    }

    .property-card .badge-type {
        position: absolute;
        top: 0.75rem;
        left: 0.75rem;
        font-size: 0.6875rem;
        font-weight: 600;
        padding: 0.375rem 0.75rem;
        border-radius: 50px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .badge-sale { background: #dcfce7; color: #166534; }
    .badge-rent { background: #dbeafe; color: #1e40af; }

    .property-card .card-body { padding: 1.25rem; }

    .property-price {
        font-size: 1.125rem;
        font-weight: 700;
        color: #111;
        margin-bottom: 0.25rem;
    }

    .property-title {
        font-size: 0.9375rem;
        font-weight: 600;
        color: #111;
        margin-bottom: 0.25rem;
        display: -webkit-box;
        -webkit-line-clamp: 1;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .property-location {
        font-size: 0.8125rem;
        color: #666;
        display: flex;
        align-items: center;
        gap: 0.25rem;
        margin-bottom: 0.75rem;
    }

    .property-location i { color: #999; font-size: 0.75rem; }

    .property-features {
        display: flex;
        gap: 1rem;
        padding-top: 0.875rem;
        border-top: 1px solid #e5e5e5;
    }

    .feature-item {
        display: flex;
        align-items: center;
        gap: 0.375rem;
        font-size: 0.8125rem;
        color: #666;
    }

    .feature-item i { color: #999; font-size: 0.75rem; }

    /* Category Card */
    .category-card {
        background: #fff;
        border: 1px solid #e5e5e5;
        border-radius: 12px;
        padding: 1.5rem;
        text-align: center;
        transition: all 0.2s ease;
        display: block;
        color: inherit;
    }

    .category-card:hover {
        border-color: #2563eb;
        box-shadow: 0 4px 16px rgba(37,99,235,0.1);
        color: inherit;
    }

    .category-card .icon {
        width: 56px;
        height: 56px;
        border-radius: 12px;
        background: #f5f5f5;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
        transition: all 0.2s ease;
    }

    .category-card:hover .icon {
        background: #2563eb;
    }

    .category-card .icon i {
        font-size: 1.25rem;
        color: #666;
        transition: color 0.2s ease;
    }

    .category-card:hover .icon i { color: #fff; }

    .category-card .name {
        font-weight: 600;
        font-size: 0.9375rem;
        color: #111;
        margin-bottom: 0.25rem;
    }

    .category-card .count {
        font-size: 0.8125rem;
        color: #666;
    }

    /* View All Link */
    .view-all {
        color: #2563eb;
        font-weight: 500;
        font-size: 0.875rem;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.375rem;
    }

    .view-all:hover { color: #1d4ed8; }
    .view-all i { font-size: 0.75rem; transition: transform 0.15s ease; }
    .view-all:hover i { transform: translateX(3px); }

    @@media (max-width: 768px) {
        .hero { padding: 3rem 0; }
        .hero-title { font-size: 2rem; }
        .section { padding: 3rem 0; }
    }
</style>

<!-- Hero Section -->
<section class="hero">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 hero-content">
                <h1 class="hero-title">Find Your Perfect Property</h1>
                <p class="hero-subtitle">
                    Discover thousands of properties for sale and rent. Your dream home is just a few clicks away.
                </p>
                <div class="d-flex gap-3">
                    <a href="/Properties" class="btn btn-primary btn-lg">Browse Properties</a>
                    <a href="/Properties?listingType=Sale" class="btn btn-outline-dark btn-lg">Buy Now</a>
                </div>
            </div>
            <div class="col-lg-6 mt-4 mt-lg-0">
                <div class="search-box">
                    <form asp-controller="Properties" asp-action="Index" method="get">
                        <div class="row g-3">
                            <div class="col-12">
                                <input type="text" class="form-control" name="search" placeholder="Search by location, title...">
                            </div>
                            <div class="col-md-6">
                                <select class="form-select" name="listingType">
                                    <option value="">All Types</option>
                                    <option value="Sale">For Sale</option>
                                    <option value="Rent">For Rent</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <select class="form-select" name="categoryId">
                                    <option value="">All Categories</option>
                                    @foreach (var cat in Model.Categories)
                                    {
                                        <option value="@cat.Id">@cat.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fas fa-search me-2"></i>Search Properties
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="stats-section">
    <div class="container">
        <div class="row text-center">
            <div class="col-6 col-md-3">
                <div class="stat-item">
                    <div class="stat-number">@(Model.FeaturedProperties.Count() + Model.LatestProperties.Count())+</div>
                    <div class="stat-label">Properties</div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-item">
                    <div class="stat-number">500+</div>
                    <div class="stat-label">Happy Clients</div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-item">
                    <div class="stat-number">50+</div>
                    <div class="stat-label">Cities</div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-item">
                    <div class="stat-number">25+</div>
                    <div class="stat-label">Expert Agents</div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Categories Section -->
<section class="section" style="background: #fafafa;">
    <div class="container">
        <div class="section-header d-flex justify-content-between align-items-center">
            <div>
                <h2 class="section-title">Browse by Category</h2>
                <p class="section-subtitle">Find properties that match your needs</p>
            </div>
        </div>
        <div class="row g-3">
            @foreach (var cat in Model.Categories)
            {
                <div class="col-6 col-md-3">
                    <a href="/Properties?categoryId=@cat.Id" class="category-card">
                        <div class="icon">
                            <i class="@(cat.IconClass ?? "fas fa-home")"></i>
                        </div>
                        <div class="name">@cat.Name</div>
                        <div class="count">Browse properties</div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>

<!-- Featured Properties -->
@if (Model.FeaturedProperties.Any())
{
    <section class="section" style="background: #fff;">
        <div class="container">
            <div class="section-header d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="section-title">Featured Properties</h2>
                    <p class="section-subtitle">Hand-picked selection of premium listings</p>
                </div>
                <a href="/Properties?featured=true" class="view-all">
                    View all <i class="fas fa-arrow-right"></i>
                </a>
            </div>
            <div class="row g-4">
                @foreach (var property in Model.FeaturedProperties.Take(4))
                {
                    <div class="col-md-6 col-lg-3">
                        <div class="property-card">
                            <div class="img-wrapper">
                                <img src="@(property.MainImageUrl ?? "https://images.unsplash.com/photo-1564013799919-ab600027ffc6?w=400")" alt="@property.Title">
                                <span class="badge-type @(property.ListingType == "Sale" ? "badge-sale" : "badge-rent")">
                                    @(property.ListingType == "Sale" ? "For Sale" : "For Rent")
                                </span>
                            </div>
                            <div class="card-body">
                                <div class="property-price">$@property.Price.ToString("N0")</div>
                                <h3 class="property-title">@property.Title</h3>
                                <p class="property-location">
                                    <i class="fas fa-map-marker-alt"></i>
                                    @property.City, @property.State
                                </p>
                                <div class="property-features">
                                    <span class="feature-item"><i class="fas fa-bed"></i> @property.Bedrooms</span>
                                    <span class="feature-item"><i class="fas fa-bath"></i> @property.Bathrooms</span>
                                    <span class="feature-item"><i class="fas fa-ruler-combined"></i> @property.SquareFeet sqft</span>
                                </div>
                            </div>
                            <a href="/Properties/Details/@property.Id" class="stretched-link"></a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}

<!-- Latest Properties -->
@if (Model.LatestProperties.Any())
{
    <section class="section" style="background: #fafafa;">
        <div class="container">
            <div class="section-header d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="section-title">Latest Listings</h2>
                    <p class="section-subtitle">Recently added properties</p>
                </div>
                <a href="/Properties" class="view-all">
                    View all <i class="fas fa-arrow-right"></i>
                </a>
            </div>
            <div class="row g-4">
                @foreach (var property in Model.LatestProperties.Take(4))
                {
                    <div class="col-md-6 col-lg-3">
                        <div class="property-card">
                            <div class="img-wrapper">
                                <img src="@(property.MainImageUrl ?? "https://images.unsplash.com/photo-1564013799919-ab600027ffc6?w=400")" alt="@property.Title">
                                <span class="badge-type @(property.ListingType == "Sale" ? "badge-sale" : "badge-rent")">
                                    @(property.ListingType == "Sale" ? "For Sale" : "For Rent")
                                </span>
                            </div>
                            <div class="card-body">
                                <div class="property-price">$@property.Price.ToString("N0")</div>
                                <h3 class="property-title">@property.Title</h3>
                                <p class="property-location">
                                    <i class="fas fa-map-marker-alt"></i>
                                    @property.City, @property.State
                                </p>
                                <div class="property-features">
                                    <span class="feature-item"><i class="fas fa-bed"></i> @property.Bedrooms</span>
                                    <span class="feature-item"><i class="fas fa-bath"></i> @property.Bathrooms</span>
                                    <span class="feature-item"><i class="fas fa-ruler-combined"></i> @property.SquareFeet sqft</span>
                                </div>
                            </div>
                            <a href="/Properties/Details/@property.Id" class="stretched-link"></a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}

<!-- CTA Section -->
<section class="section" style="background: #111; color: #fff;">
    <div class="container text-center py-4">
        <h2 style="font-size: 2rem; font-weight: 700; margin-bottom: 1rem;">Ready to Find Your Dream Home?</h2>
        <p style="color: #999; font-size: 1.125rem; margin-bottom: 2rem; max-width: 500px; margin-left: auto; margin-right: auto;">
            Join thousands of happy homeowners who found their perfect property with us.
        </p>
        <a href="/Account/Register" class="btn btn-primary btn-lg px-5">Get Started Today</a>
    </div>
</section>

