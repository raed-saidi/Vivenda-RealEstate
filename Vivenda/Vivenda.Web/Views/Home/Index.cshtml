@model Vivenda.Web.Models.HomeViewModel
@using Vivenda.BLL.DTOs
@{
    ViewData["Title"] = "Home - Vivenda Tunisia";
}

<style>
    /* ============= HERO SECTION ============= */
    /* ============= HERO SECTION ============= */
.hero {
    background: url('/images/image2-xl@1x.png') center/cover no-repeat;
    padding: 0;
    position: relative;
    overflow: hidden;
    min-height: 500px;
    display: flex;
    align-items: center;
    color: #fff;
}

.hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.35);
    z-index: 1;
}

.hero-content {
    position: relative;
    z-index: 2;
    max-width: 100%;
    padding: 4rem 0;
}

.hero-title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 800;
    color: #fff;
    line-height: 1.1;
    letter-spacing: -1.5px;
    margin-bottom: 2rem;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
}

.hero-subtitle {
    font-size: clamp(1.1rem, 2.5vw, 1.5rem);
    color: #fff;
    margin-bottom: 2rem;
    line-height: 1.4;
    max-width: 650px;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.5);
}

@@media (max-width: 768px) {
    .hero { 
        min-height: 400px;
    }
    .hero-content { 
        padding: 3rem 0; 
    }
}
    @@media (max-width: 768px) {
        .hero { min-height: 500px; }
        .hero-image { width: 100%; opacity: 0.1; }
        .hero-content { padding: 2rem 0; }
    }

    /* ============= SEARCH BOX ============= */
    .search-container {
        background: #fff;
        border-radius: 16px;
        padding: 2rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
        margin-top: 2rem;
        max-width: 900px;
    }

    .search-box h4 {
        color: #1a1a2e;
        font-weight: 700;
        margin-bottom: 1.5rem;
        font-size: 1.125rem;
    }

    .search-group {
        margin-bottom: 1rem;
    }

    .search-group label {
        color: #555;
        font-weight: 600;
        font-size: 0.875rem;
        margin-bottom: 0.5rem;
        display: block;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .search-box .form-control,
    .search-box .form-select {
        border: 2px solid #e5e5e5;
        border-radius: 10px;
        padding: 0.875rem 1rem;
        font-size: 0.95rem;
        transition: all 0.2s ease;
        background: #f9f9f9;
    }

    .search-box .form-control:focus,
    .search-box .form-select:focus {
        border-color: #d4941e;
        background: #fff;
        box-shadow: 0 0 0 4px rgba(212, 148, 30, 0.1);
    }

    .search-box .btn-primary {
        padding: 0.875rem 2.5rem;
        font-weight: 700;
        border-radius: 10px;
        background: #d4941e;
        border: none;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-size: 0.9rem;
    }

    .search-box .btn-primary:hover {
        background: #b8800a;
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(212, 148, 30, 0.3);
    }

    /* ============= STATS SECTION ============= */
    .stats-section {
        padding: 4rem 0;
        background: linear-gradient(135deg, #f8f9fa 0%, #fff 100%);
        border-bottom: 1px solid #e5e5e5;
    }

    .stat-item {
        text-align: center;
        padding: 1.5rem;
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 800;
        color: #d4941e;
        margin-bottom: 0.5rem;
    }

    .stat-label {
        font-size: 0.9rem;
        color: #555;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: 600;
    }

    /* ============= SECTIONS & HEADERS ============= */
    .section {
        padding: 5rem 0;
    }

    .section-header {
        margin-bottom: 3rem;
    }

    .section-title {
        font-size: clamp(1.5rem, 3vw, 2rem);
        font-weight: 800;
        color: #1a1a2e;
        margin-bottom: 0.5rem;
        position: relative;
        display: inline-block;
    }

    .section-title::after {
        content: '';
        position: absolute;
        bottom: -8px;
        left: 0;
        width: 60px;
        height: 4px;
        background: #d4941e;
        border-radius: 2px;
    }

    .section-subtitle {
        color: #666;
        font-size: 1rem;
        margin-top: 1rem;
    }

    .view-all {
        color: #d4941e;
        font-weight: 700;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.2s ease;
        font-size: 0.9rem;
    }

    .view-all:hover {
        color: #b8800a;
        gap: 0.75rem;
    }

    /* ============= PROPERTY CARDS ============= */
    .property-card {
        border: none;
        border-radius: 14px;
        background: #fff;
        overflow: hidden;
        transition: all 0.3s ease;
        height: 100%;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        position: relative;
    }

    .property-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 32px rgba(0, 0, 0, 0.12);
    }

    .img-wrapper {
        position: relative;
        overflow: hidden;
        height: 240px;
        background: #f0f0f0;
    }

    .img-wrapper img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .property-card:hover .img-wrapper img {
        transform: scale(1.08);
    }

    .badge-type {
        position: absolute;
        top: 12px;
        right: 12px;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        z-index: 2;
    }

    .badge-sale {
        background: #d4941e;
        color: #fff;
    }

    .badge-rent {
        background: #4CAF50;
        color: #fff;
    }

    .card-body {
        padding: 1.5rem;
    }

    .property-price {
        font-size: 1.5rem;
        font-weight: 800;
        color: #d4941e;
        margin-bottom: 0.5rem;
    }

    .property-title {
        font-size: 1.1rem;
        font-weight: 700;
        color: #1a1a2e;
        margin-bottom: 0.75rem;
        line-height: 1.3;
    }

    .property-location {
        color: #888;
        font-size: 0.9rem;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .property-location i {
        color: #d4941e;
    }

    .property-features {
        display: flex;
        gap: 1rem;
        border-top: 1px solid #e5e5e5;
        padding-top: 1rem;
        flex-wrap: wrap;
    }

    .feature-item {
        color: #666;
        font-size: 0.85rem;
        display: flex;
        align-items: center;
        gap: 0.4rem;
    }

    .feature-item i {
        color: #d4941e;
    }

    /* ============= CATEGORY CARDS ============= */
    .category-card {
        border: 2px solid #e5e5e5;
        border-radius: 12px;
        padding: 2rem 1.5rem;
        text-align: center;
        text-decoration: none;
        color: #1a1a2e;
        transition: all 0.3s ease;
        background: #fff;
        display: block;
    }

    .category-card:hover {
        border-color: #d4941e;
        box-shadow: 0 8px 24px rgba(212, 148, 30, 0.15);
        transform: translateY(-4px);
    }

    .category-card .icon {
        font-size: 2.5rem;
        color: #d4941e;
        margin-bottom: 1rem;
    }

    .category-card .name {
        font-size: 1.1rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .category-card .count {
        color: #999;
        font-size: 0.85rem;
    }

    /* ============= CTA SECTION ============= */
    .cta-section {
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
        color: #fff;
        padding: 5rem 0;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .cta-section::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 400px;
        height: 400px;
        background: radial-gradient(circle, rgba(212, 148, 30, 0.1) 0%, transparent 70%);
        border-radius: 50%;
    }

    .cta-section h2 {
        font-size: 2.25rem;
        font-weight: 800;
        margin-bottom: 1rem;
        position: relative;
        z-index: 1;
    }

    .cta-section p {
        color: #d0d0d0;
        font-size: 1.1rem;
        margin-bottom: 2rem;
        max-width: 500px;
        margin-left: auto;
        margin-right: auto;
        position: relative;
        z-index: 1;
    }

    .cta-section .btn {
        position: relative;
        z-index: 1;
    }

    /* ============= RESPONSIVE ============= */
    @@media (max-width: 768px) {
        .section { padding: 3rem 0; }
        .section-title { font-size: 1.5rem; }
        .property-card { margin-bottom: 1rem; }
        .search-container { margin: 1.5rem -1rem -3rem -1rem; border-radius: 0; }
    }
</style>

<!-- HERO SECTION -->
<section class="hero">
    <div class="container position-relative" style="z-index: 2;">
        <div class="row">
            <div class="col-lg-8">
                <div class="hero-content">
                    <h1 class="hero-title">Rentals. Homes.<br>Agents. Loans.</h1>
                    
                    <!-- SEARCH BOX -->
                    <div class="search-container" style="background: #fff; border-radius: 60px; padding: 0.5rem; max-width: 650px; box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);">
