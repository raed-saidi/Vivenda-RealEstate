<!-- STATS SECTION -->
<section class="stats-section">
    <div class="container">
        <div class="row text-center">
            <div class="col-6 col-md-3 mb-3 mb-md-0">
                <div class="stat-item">
                    <div class="stat-number">@(Model.FeaturedProperties.Count() + Model.LatestProperties.Count())+</div>
                    <div class="stat-label">Properties</div>
                </div>
            </div>
            <div class="col-6 col-md-3 mb-3 mb-md-0">
                <div class="stat-item">
                    <div class="stat-number">2,500+</div>
                    <div class="stat-label">Happy Clients</div>
                </div>
            </div>
            <div class="col-6 col-md-3 mb-3 mb-md-0">
                <div class="stat-item">
                    <div class="stat-number">24</div>
                    <div class="stat-label">Tunisian Governorates</div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-item">
                    <div class="stat-number">50+</div>
                    <div class="stat-label">Expert Agents</div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CATEGORIES SECTION -->
<section class="section" style="background: #fafafa;">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">Browse by Category</h2>
            <p class="section-subtitle">Find properties that match your needs and lifestyle</p>
        </div>
        <div class="row g-3">
            @foreach (var cat in Model.Categories)
            {
                <div class="col-6 col-md-3">
                    <a href="/Properties?categoryId=@cat.Id" class="category-card">
                        <div class="icon">
                            <i class="@(cat.IconClass ?? "fas fa-home")"></i>
                        </div>
                        <div class="name">@cat.Name</div>
                        <div class="count">Browse properties</div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>

<!-- FEATURED PROPERTIES -->
@if (Model.FeaturedProperties.Any())
{
    <section class="section" style="background: #fff;">
        <div class="container">
            <div class="section-header d-flex justify-content-between align-items-center flex-wrap">
                <div>
                    <h2 class="section-title">Featured Properties</h2>
                    <p class="section-subtitle">Premium listings hand-picked for you</p>
                </div>
                <a href="/Properties?featured=true" class="view-all mt-3 mt-md-0">
                    View all <i class="fas fa-arrow-right"></i>
                </a>
            </div>
            <div class="row g-4">
                @foreach (var property in Model.FeaturedProperties.Take(4))
                {
                    <div class="col-md-6 col-lg-3">
                        <div class="property-card">
                            <div class="img-wrapper">
                                <img src="@(property.MainImageUrl ?? "https://images.unsplash.com/photo-1512917774080-9264f475eada?w=500&q=80")" alt="@property.Title" onerror="this.src='https://via.placeholder.com/400x300?text=Property+Image'">
                                <span class="badge-type @(property.ListingType == "Sale" ? "badge-sale" : "badge-rent")">
                                    @(property.ListingType == "Sale" ? "For Sale" : "For Rent")
                                </span>
                            </div>
                            <div class="card-body">
                                <div class="property-price">@property.Price.ToString("N0") TND</div>
                                <h3 class="property-title">@property.Title</h3>
                                <p class="property-location">
                                    <i class="fas fa-map-marker-alt"></i>
                                    @property.City, Tunisia
                                </p>
                                <div class="property-features">
                                    <span class="feature-item"><i class="fas fa-bed"></i> @property.Bedrooms bd</span>
                                    <span class="feature-item"><i class="fas fa-bath"></i> @property.Bathrooms ba</span>
                                    <span class="feature-item"><i class="fas fa-ruler-combined"></i> @property.SquareFeet m²</span>
                                </div>
                            </div>
                            <a href="/Properties/Details/@property.Id" class="stretched-link"></a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}

<!-- LATEST PROPERTIES -->
@if (Model.LatestProperties.Any())
{
    <section class="section" style="background: #fafafa;">
        <div class="container">
            <div class="section-header d-flex justify-content-between align-items-center flex-wrap">
                <div>
                    <h2 class="section-title">Latest Listings</h2>
                    <p class="section-subtitle">Recently added properties in Tunisia</p>
                </div>
                <a href="/Properties" class="view-all mt-3 mt-md-0">
                    View all <i class="fas fa-arrow-right"></i>
                </a>
            </div>
            <div class="row g-4">
                @foreach (var property in Model.LatestProperties.Take(4))
                {
                    <div class="col-md-6 col-lg-3">
                        <div class="property-card">
                            <div class="img-wrapper">
                                <img src="@(property.MainImageUrl ?? "https://images.unsplash.com/photo-1552321554-5fefe8c9ef14?w=500&q=80")" alt="@property.Title" onerror="this.src='https://via.placeholder.com/400x300?text=Property+Image'">
                                <span class="badge-type @(property.ListingType == "Sale" ? "badge-sale" : "badge-rent")">
                                    @(property.ListingType == "Sale" ? "For Sale" : "For Rent")
                                </span>
                            </div>
                            <div class="card-body">
                                <div class="property-price">@property.Price.ToString("N0") TND</div>
                                <h3 class="property-title">@property.Title</h3>
                                <p class="property-location">
                                    <i class="fas fa-map-marker-alt"></i>
                                    @property.City, Tunisia
                                </p>
                                <div class="property-features">
                                    <span class="feature-item"><i class="fas fa-bed"></i> @property.Bedrooms bd</span>
                                    <span class="feature-item"><i class="fas fa-bath"></i> @property.Bathrooms ba</span>
                                    <span class="feature-item"><i class="fas fa-ruler-combined"></i> @property.SquareFeet m²</span>
                                </div>
                            </div>
                            <a href="/Properties/Details/@property.Id" class="stretched-link"></a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}


