@using Microsoft.AspNetCore.Identity
@inject SignInManager<Vivenda.DAL.Entities.User> SignInManager
@inject UserManager<Vivenda.DAL.Entities.User> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Vivenda</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    
    <style>
        :root {
            --primary: #1a1a1a;
            --primary-light: #333;
            --accent: #2563eb;
            --accent-hover: #1d4ed8;
            --bg: #fafafa;
            --bg-white: #ffffff;
            --border: #e5e5e5;
            --text: #111;
            --text-muted: #666;
            --text-light: #999;
        }

        * { margin: 0; padding: 0; box-sizing: border-box; }
        
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            background: var(--bg);
            color: var(--text);
            line-height: 1.6;
            -webkit-font-smoothing: antialiased;
        }

        a { text-decoration: none; }

        /* Navbar */
        .navbar {
            background: var(--bg-white);
            border-bottom: 1px solid var(--border);
            padding: 0;
            height: 64px;
        }

        .navbar > .container { height: 100%; }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.125rem;
            color: var(--text) !important;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            letter-spacing: -0.5px;
        }

        .navbar-brand i { color: var(--accent); font-size: 1.25rem; }

        .navbar-nav { gap: 0.25rem; }

        .nav-link {
            color: var(--text-muted) !important;
            font-size: 0.875rem;
            font-weight: 500;
            padding: 0.5rem 0.875rem !important;
            border-radius: 6px;
            transition: all 0.15s ease;
        }

        .nav-link:hover { color: var(--text) !important; background: #f5f5f5; }
        .nav-link.active { color: var(--accent) !important; background: #eff6ff; }

        .navbar-actions {
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .btn-signin {
            color: var(--text-muted);
            font-size: 0.875rem;
            font-weight: 500;
            padding: 0.5rem 1rem;
            border-radius: 6px;
            background: transparent;
            border: none;
            transition: all 0.15s ease;
        }

        .btn-signin:hover { color: var(--text); background: #f5f5f5; }

        .btn-getstarted {
            color: #fff;
            font-size: 0.875rem;
            font-weight: 500;
            padding: 0.5rem 1rem;
            border-radius: 6px;
            background: var(--accent);
            border: none;
            transition: all 0.15s ease;
        }

        .btn-getstarted:hover { background: var(--accent-hover); color: #fff; }

        .user-menu-btn {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.375rem 0.5rem 0.375rem 0.75rem;
            border: 1px solid var(--border);
            border-radius: 50px;
            background: var(--bg-white);
            cursor: pointer;
            transition: all 0.15s ease;
        }

        .user-menu-btn:hover { border-color: #ccc; box-shadow: 0 2px 8px rgba(0,0,0,0.06); }

        .user-avatar {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            background: var(--accent);
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.75rem;
            font-weight: 600;
        }

        .dropdown-menu {
            border: 1px solid var(--border);
            border-radius: 8px;
            box-shadow: 0 4px 24px rgba(0,0,0,0.08);
            padding: 0.5rem;
            min-width: 200px;
            margin-top: 0.5rem !important;
        }

        .dropdown-item {
            font-size: 0.875rem;
            padding: 0.5rem 0.75rem;
            border-radius: 6px;
            color: var(--text-muted);
            transition: all 0.15s ease;
        }

        .dropdown-item:hover { background: #f5f5f5; color: var(--text); }
        .dropdown-item i { width: 18px; color: var(--text-light); margin-right: 0.5rem; }
        .dropdown-divider { margin: 0.5rem 0; border-color: var(--border); }
        .dropdown-header { font-size: 0.75rem; color: var(--text-light); padding: 0.5rem 0.75rem; font-weight: 500; }

        /* Main Content */
        main { min-height: calc(100vh - 64px - 180px); }

        /* Section Styles */
        .section { padding: 4rem 0; }
        .section-sm { padding: 3rem 0; }

        .section-header { margin-bottom: 2rem; }
        .section-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--text);
            margin-bottom: 0.25rem;
            letter-spacing: -0.5px;
        }
        .section-subtitle { color: var(--text-muted); font-size: 0.9375rem; }

        /* Cards */
        .card {
            border: 1px solid var(--border);
            border-radius: 12px;
            background: var(--bg-white);
            overflow: hidden;
            transition: all 0.2s ease;
        }

        .card:hover { border-color: #ddd; box-shadow: 0 8px 24px rgba(0,0,0,0.06); transform: translateY(-2px); }

        .card-img-top { height: 200px; object-fit: cover; }

        .card-body { padding: 1.25rem; }

        .card-title {
            font-size: 1rem;
            font-weight: 600;
            color: var(--text);
            margin-bottom: 0.25rem;
        }

        .card-text { font-size: 0.875rem; color: var(--text-muted); }

        /* Property Card */
        .property-card .card-img-wrapper { position: relative; overflow: hidden; }
        .property-card .badge-type {
            position: absolute;
            top: 0.75rem;
            left: 0.75rem;
            font-size: 0.6875rem;
            font-weight: 600;
            padding: 0.375rem 0.75rem;
            border-radius: 50px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        .badge-sale { background: #dcfce7; color: #166534; }
        .badge-rent { background: #dbeafe; color: #1e40af; }

        .property-price {
            font-size: 1.125rem;
            font-weight: 700;
            color: var(--text);
        }

        .property-location {
            font-size: 0.8125rem;
            color: var(--text-muted);
            display: flex;
            align-items: center;
            gap: 0.25rem;
        }

        .property-location i { font-size: 0.75rem; color: var(--text-light); }

        .property-features {
            display: flex;
            gap: 1rem;
            padding-top: 0.875rem;
            margin-top: 0.875rem;
            border-top: 1px solid var(--border);
        }

        .feature-item {
            display: flex;
            align-items: center;
            gap: 0.375rem;
            font-size: 0.8125rem;
            color: var(--text-muted);
        }

        .feature-item i { color: var(--text-light); font-size: 0.75rem; }

        /* Buttons */
        .btn-primary {
            background: var(--accent);
            border: none;
            font-weight: 500;
            padding: 0.625rem 1.25rem;
            border-radius: 8px;
            font-size: 0.875rem;
        }

        .btn-primary:hover { background: var(--accent-hover); }

        .btn-outline-dark {
            border: 1px solid var(--border);
            color: var(--text);
            font-weight: 500;
            padding: 0.625rem 1.25rem;
            border-radius: 8px;
            font-size: 0.875rem;
        }

        .btn-outline-dark:hover { background: var(--text); color: #fff; border-color: var(--text); }

        /* Forms */
        .form-control, .form-select {
            border: 1px solid var(--border);
            border-radius: 8px;
            padding: 0.625rem 0.875rem;
            font-size: 0.875rem;
            transition: all 0.15s ease;
        }

        .form-control:focus, .form-select:focus {
            border-color: var(--accent);
            box-shadow: 0 0 0 3px rgba(37,99,235,0.1);
        }

        .form-label { font-size: 0.875rem; font-weight: 500; color: var(--text); margin-bottom: 0.375rem; }

        /* Footer */
        footer {
            background: var(--bg-white);
            border-top: 1px solid var(--border);
            padding: 3rem 0 1.5rem;
        }

        .footer-brand {
            font-weight: 700;
            font-size: 1.125rem;
            color: var(--text);
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 0.75rem;
        }

        .footer-brand i { color: var(--accent); }

        .footer-text { color: var(--text-muted); font-size: 0.875rem; line-height: 1.7; max-width: 280px; }

        .footer-title {
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            color: var(--text-light);
            margin-bottom: 1rem;
        }

        .footer-links { list-style: none; padding: 0; margin: 0; }
        .footer-links li { margin-bottom: 0.5rem; }
        .footer-links a { color: var(--text-muted); font-size: 0.875rem; transition: color 0.15s ease; }
        .footer-links a:hover { color: var(--accent); }

        .footer-bottom {
            margin-top: 2rem;
            padding-top: 1.5rem;
            border-top: 1px solid var(--border);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .footer-copyright { font-size: 0.8125rem; color: var(--text-light); }

        .footer-social { display: flex; gap: 1rem; }
        .footer-social a { color: var(--text-light); font-size: 1rem; transition: color 0.15s ease; }
        .footer-social a:hover { color: var(--accent); }

        /* Utilities */
        .text-accent { color: var(--accent) !important; }

        /* Responsive */
        @@media (max-width: 991px) {
            .navbar-collapse {
                position: absolute;
                top: 100%;
                left: 0;
                right: 0;
                background: var(--bg-white);
                border-bottom: 1px solid var(--border);
                padding: 1rem;
            }
            .navbar-actions { margin-top: 1rem; }
        }

        @@media (max-width: 767px) {
            .footer-bottom { flex-direction: column; gap: 1rem; text-align: center; }
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg sticky-top">
        <div class="container d-flex align-items-center">
            <a class="navbar-brand" href="/">
                <i class="fas fa-building"></i>
                Vivenda
            </a>

            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <i class="fas fa-bars"></i>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Properties" ? "active" : "")" href="/Properties">Properties</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Properties?listingType=Sale">Buy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Properties?listingType=Rent">Rent</a>
                    </li>
                </ul>

                <div class="navbar-actions">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        var user = await UserManager.GetUserAsync(User);
                        var initials = $"{user?.FirstName?.FirstOrDefault()}{user?.LastName?.FirstOrDefault()}".ToUpper();
                        
                        <div class="dropdown">
                            <button class="user-menu-btn" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-bars" style="font-size: 0.75rem; color: var(--text-muted);"></i>
                                <div class="user-avatar">@initials</div>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><span class="dropdown-header">@user?.Email</span></li>
                                <li><hr class="dropdown-divider"></li>
                                @if (User.IsInRole("Admin"))
                                {
                                    <li><a class="dropdown-item" href="/Admin"><i class="fas fa-cog"></i> Admin Panel</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                }
                                <li><a class="dropdown-item" href="/Properties/MyProperties"><i class="fas fa-home"></i> My Properties</a></li>
                                <li><a class="dropdown-item" href="/Favorites"><i class="fas fa-heart"></i> Favorites</a></li>
                                  <li><a class="dropdown-item" asp-controller="Inquiries" asp-action="Sent"><i class="fas fa-paper-plane"></i> Sent Inquiries</a></li>
                                  <li><a class="dropdown-item" asp-controller="Inquiries" asp-action="Received"><i class="fas fa-inbox"></i> Received Inquiries</a></li>
                                <li><a class="dropdown-item" href="/Account/Profile"><i class="fas fa-user"></i> Profile</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="fas fa-sign-out-alt"></i> Sign Out
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <a href="/Account/Login" class="btn-signin">Sign In</a>
                        <a href="/Account/Register" class="btn-getstarted">Get Started</a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <main>
        @RenderBody()
    </main>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-4 mb-lg-0">
                    <div class="footer-brand">
                        <i class="fas fa-building"></i>
                        Vivenda
                    </div>
                    <p class="footer-text">
                        Your trusted partner for finding the perfect property. Browse thousands of listings and connect with agents.
                    </p>
                </div>
                <div class="col-6 col-lg-2">
                    <h6 class="footer-title">Properties</h6>
                    <ul class="footer-links">
                        <li><a href="/Properties?listingType=Sale">For Sale</a></li>
                        <li><a href="/Properties?listingType=Rent">For Rent</a></li>
                        <li><a href="/Properties">All Listings</a></li>
                    </ul>
                </div>
                <div class="col-6 col-lg-2">
                    <h6 class="footer-title">Company</h6>
                    <ul class="footer-links">
                        <li><a href="#">About Us</a></li>
                        <li><a href="#">Contact</a></li>
                        <li><a href="#">Careers</a></li>
                    </ul>
                </div>
                <div class="col-6 col-lg-2">
                    <h6 class="footer-title">Legal</h6>
                    <ul class="footer-links">
                        <li><a href="#">Privacy Policy</a></li>
                        <li><a href="#">Terms of Service</a></li>
                        <li><a href="#">Cookies</a></li>
                    </ul>
                </div>
                <div class="col-6 col-lg-2">
                    <h6 class="footer-title">Contact</h6>
                    <ul class="footer-links">
                        <li><a href="mailto:info@vivenda.com">info@vivenda.com</a></li>
                        <li><a href="tel:+1234567890">+1 (234) 567-890</a></li>
                    </ul>
                </div>
            </div>
            <div class="footer-bottom">
                <span class="footer-copyright">Â© @DateTime.Now.Year Vivenda. All rights reserved.</span>
                <div class="footer-social">
                    <a href="#"><i class="fab fa-facebook-f"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                    <a href="#"><i class="fab fa-linkedin-in"></i></a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Chatbot Widget -->
    <partial name="_ChatbotWidget" />

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/chatbot.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

