@model PropertyDto
@{
    ViewData["Title"] = Model.Title;
    var relatedProperties = ViewBag.RelatedProperties as IEnumerable<PropertyDto> ?? Enumerable.Empty<PropertyDto>();
}

<style>
    /* Override Bootstrap primary color for this page */
    .text-primary {
        color: #b8800a !important;
    }
    /* ... rest of the CSS above ... */
</style>

<section class="py-5">
    <!-- rest of your existing HTML -->
    <div class="container">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item"><a asp-controller="Properties" asp-action="Index">Properties</a></li>
                <li class="breadcrumb-item active">@Model.Title</li>
            </ol>
        </nav>

        <div class="row">
            <!-- Main Content -->
            <div class="col-lg-8">
                <!-- Property Images -->
                <div class="card shadow-sm mb-4">
                   <img src="@(Model.MainImageUrl ?? "https://via.placeholder.com/800x500?text=No+Image")" 
                         class="card-img-top" alt="@Model.Title" style="max-height: 500px; object-fit: cover;">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <span class="badge bg-@(Model.ListingType == "Sale" ? "success" : "info") mb-2">
                                    For @Model.ListingType
                                </span>
                                @if (Model.IsFeatured)
                                {
                                    <span class="badge bg-warning mb-2 ms-1">
                                        <i class="fas fa-star me-1"></i>Featured
                                    </span>
                                }
                                <h2 class="mb-1">@Model.Title</h2>
                                <p class="text-muted">
                                    <i class="fas fa-map-marker-alt me-1"></i>
                                    @Model.Address, @Model.City, @Model.State @Model.ZipCode
                                </p>
                            </div>
                            <div class="text-end">
                                <h3 class="text-primary mb-0">@Model.Price.ToString("N0") TND</h3>
                                @if (Model.ListingType == "Rent")
                                {
                                    <small class="text-muted">/month</small>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Property Details -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white">
                        <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Property Details</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3 col-6 mb-3">
                                <div class="text-center p-3 bg-light rounded">
                                    <i class="fas fa-bed fa-2x text-primary mb-2"></i>
                                    <h6 class="mb-0">@Model.Bedrooms</h6>
                                    <small class="text-muted">Bedrooms</small>
                                </div>
                            </div>
                            <div class="col-md-3 col-6 mb-3">
                                <div class="text-center p-3 bg-light rounded">
                                    <i class="fas fa-bath fa-2x text-primary mb-2"></i>
                                    <h6 class="mb-0">@Model.Bathrooms</h6>
                                    <small class="text-muted">Bathrooms</small>
                                </div>
                            </div>
                            <div class="col-md-3 col-6 mb-3">
                                <div class="text-center p-3 bg-light rounded">
                                    <i class="fas fa-ruler-combined fa-2x text-primary mb-2"></i>
                                    <h6 class="mb-0">@Model.SquareFeet.ToString("N0")</h6>
                                    <small class="text-muted">Sq Ft</small>
                                </div>
                            </div>
                            <div class="col-md-3 col-6 mb-3">
                                <div class="text-center p-3 bg-light rounded">
                                    <i class="fas fa-calendar fa-2x text-primary mb-2"></i>
                                    <h6 class="mb-0">@(Model.YearBuilt?.ToString() ?? "N/A")</h6>
                                    <small class="text-muted">Year Built</small>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-md-6">
                                <table class="table table-borderless">
                                    <tr>
                                        <td class="text-muted">Property Type:</td>
                                        <td><strong>@Model.PropertyType</strong></td>
                                    </tr>
                                    <tr>
                                        <td class="text-muted">Category:</td>
                                        <td><strong>@(Model.CategoryName ?? "N/A")</strong></td>
                                    </tr>
                                    <tr>
                                        <td class="text-muted">Status:</td>
                                        <td><span class="badge bg-success">@Model.Status</span></td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-md-6">
                                <table class="table table-borderless">
                                    <tr>
                                        <td class="text-muted">Country:</td>
                                        <td><strong>@Model.Country</strong></td>
                                    </tr>
                                    <tr>
                                        <td class="text-muted">Listed:</td>
                                        <td><strong>@Model.CreatedAt.ToString("MMM dd, yyyy")</strong></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Description -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white">
                        <h5 class="mb-0"><i class="fas fa-align-left me-2"></i>Description</h5>
                    </div>
                    <div class="card-body">
                        <p>@Model.Description</p>
                    </div>
                </div>

                <!-- Amenities -->
                @if (Model.Amenities.Any())
                {
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-white">
                            <h5 class="mb-0"><i class="fas fa-check-circle me-2"></i>Amenities</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                @foreach (var amenity in Model.Amenities)
                                {
                                    <div class="col-md-4 col-6 mb-2">
                                        <i class="fas fa-check text-success me-2"></i>@amenity
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Agent Info -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header text-white" style="background-color: #d4941e;">
                        <h5 class="mb-0"><i class="fas fa-user me-2"></i>Listed By</h5>
                        </div>
                    </div>
                    <div class="card-body text-center">
                        <img src="https://via.placeholder.com/100x100?text=Agent" 
                             class="rounded-circle mb-3" alt="Agent">
                        <h5>@Model.UserName</h5>
                        <p class="text-muted">Property Agent</p>
                        <div class="d-grid gap-2">
                            <a href="tel:+1234567890" class="btn" style="color:  #d4941e; border: 2px solid  #d4941e background: transparent;">
                                <i class="fas fa-phone me-2"></i>Call Now
                            </a>
                            <a href="mailto:agent@vivenda.com" class="btn text-white" style="background-color:  #d4941e; border-color:  #d4941e;">
                                <i class="fas fa-envelope me-2"></i>Send Email
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Inquiry Form -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white">
                        <h5 class="mb-0"><i class="fas fa-paper-plane me-2"></i>Send Inquiry</h5>
                    </div>
                    <div class="card-body">
                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                @TempData["Success"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }
                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                @TempData["Error"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }
                        <form asp-controller="Properties" asp-action="SendInquiry" method="post">
                            <input type="hidden" name="PropertyId" value="@Model.Id" />
                            <div class="mb-3">
                                <input type="text" class="form-control" name="SenderName" placeholder="Your Name" required>
                            </div>
                            <div class="mb-3">
                                <input type="email" class="form-control" name="SenderEmail" placeholder="Your Email" required>
                            </div>
                            <div class="mb-3">
                                <input type="tel" class="form-control" name="SenderPhone" placeholder="Your Phone">
                            </div>
                            <div class="mb-3">
                                <input type="text" class="form-control" name="Subject" placeholder="Subject" value="Inquiry about @Model.Title" required>
                            </div>
                            <div class="mb-3">
                                <textarea class="form-control" rows="4" name="Message" placeholder="I'm interested in this property..." required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-paper-plane me-2"></i>Send Inquiry
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Related Properties -->
        @if (relatedProperties.Any())
        {
            <hr class="my-5">
            <h4 class="mb-4">Related Properties</h4>
            <div class="row">
                @foreach (var property in relatedProperties)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card property-card h-100">
                            <div class="position-relative">
                                <img src="@(property.MainImageUrl ?? "https://via.placeholder.com/400x300?text=No+Image")" 
                                     class="card-img-top" alt="@property.Title">
                                <span class="property-badge badge bg-@(property.ListingType == "Sale" ? "success" : "info")">
                                    For @property.ListingType
                                </span>
                            </div>
                            <div class="card-body">
                                <h6 class="card-title">@property.Title</h6>
                                <p class="property-price">$@property.Price.ToString("N0")</p>
                                <p class="text-muted small">
                                    <i class="fas fa-map-marker-alt me-1"></i>@property.City, @property.State
                                </p>
                            </div>
                            <div class="card-footer bg-white border-0">
                                <a asp-controller="Properties" asp-action="Details" asp-route-id="@property.Id" 
                                   class="btn btn-outline-primary w-100">View Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>
