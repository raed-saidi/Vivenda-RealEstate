@model Vivenda.BLL.DTOs.RegisterDto
@{
    ViewData["Title"] = "Create Account";
}

<style>
    .auth-page {
        min-height: calc(100vh - 64px - 180px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 3rem 1rem;
        background: #fafafa;
    }

    .auth-card {
        width: 100%;
        max-width: 440px;
        background: #fff;
        border: 1px solid #e5e5e5;
        border-radius: 12px;
        padding: 2.5rem;
    }

    .auth-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .auth-header h1 {
        font-size: 1.5rem;
        font-weight: 700;
        color: #111;
        margin-bottom: 0.5rem;
    }

    .auth-header p {
        color: #666;
        font-size: 0.9375rem;
    }

    .form-group { margin-bottom: 1.25rem; }

    .form-label {
        font-size: 0.875rem;
        font-weight: 500;
        color: #111;
        margin-bottom: 0.375rem;
        display: block;
    }

    .form-control {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 1px solid #e5e5e5;
        border-radius: 8px;
        font-size: 0.9375rem;
        transition: all 0.15s ease;
    }

    .form-control:focus {
        outline: none;
        border-color: #d4941e;
        box-shadow: 0 0 0 3px rgba(212,148,30,0.1);
    }

    .btn-submit {
        width: 100%;
        padding: 0.75rem;
        background: #d4941e;
        color: #fff;
        border: none;
        border-radius: 8px;
        font-size: 0.9375rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.15s ease;
    }

    .btn-submit:hover { background: #b8800a; }

    .auth-footer {
        text-align: center;
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid #e5e5e5;
    }

    .auth-footer p {
        color: #666;
        font-size: 0.875rem;
    }

    .auth-footer a {
        color: #d4941e;
        font-weight: 500;
        text-decoration: none;
    }

    .auth-footer a:hover { text-decoration: underline; }

    .alert {
        padding: 0.75rem 1rem;
        border-radius: 8px;
        margin-bottom: 1.25rem;
        font-size: 0.875rem;
    }

    .alert-danger {
        background: #fee2e2;
        color: #991b1b;
        border: 1px solid #fecaca;
    }

    .text-danger {
        color: #dc2626;
        font-size: 0.8125rem;
        margin-top: 0.25rem;
        display: block;
    }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }

    @@media (max-width: 480px) {
        .form-row { grid-template-columns: 1fr; }
    }

    .terms-text {
        font-size: 0.8125rem;
        color: #666;
        text-align: center;
        margin-top: 1rem;
    }

    .terms-text a {
        color: #d4941e;
        text-decoration: none;
    }
</style>

<div class="auth-page">
    <div class="auth-card">
        <div class="auth-header">
            <h1>Create an account</h1>
            <p>Join us to find your perfect property</p>
        </div>

        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form asp-action="Register" method="post">
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="FirstName" class="form-label">First name</label>
                    <input asp-for="FirstName" class="form-control" placeholder="John" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="form-label">Last name</label>
                    <input asp-for="LastName" class="form-control" placeholder="Doe" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="form-label">Email address</label>
                <input asp-for="Email" class="form-control" placeholder="you@example.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber" class="form-label">Phone number</label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="+1 (234) 567-890" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="••••••••" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class="form-label">Confirm password</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="••••••••" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-submit">Create Account</button>

            <p class="terms-text">
                By signing up, you agree to our <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a>
            </p>
        </form>

        <div class="auth-footer">
            <p>Already have an account? <a href="/Account/Login">Sign in</a></p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

