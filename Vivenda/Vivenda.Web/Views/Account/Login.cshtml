@model Vivenda.BLL.DTOs.LoginDto
@{
    ViewData["Title"] = "Sign In";
}

<style>
    .auth-page {
        min-height: calc(100vh - 64px - 180px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 3rem 1rem;
        background: #fafafa;
    }

    .auth-card {
        width: 100%;
        max-width: 400px;
        background: #fff;
        border: 1px solid #e5e5e5;
        border-radius: 12px;
        padding: 2.5rem;
    }

    .auth-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .auth-header h1 {
        font-size: 1.5rem;
        font-weight: 700;
        color: #111;
        margin-bottom: 0.5rem;
    }

    .auth-header p {
        color: #666;
        font-size: 0.9375rem;
    }

    .form-group { margin-bottom: 1.25rem; }

    .form-label {
        font-size: 0.875rem;
        font-weight: 500;
        color: #111;
        margin-bottom: 0.375rem;
        display: block;
    }

    .form-control {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 1px solid #e5e5e5;
        border-radius: 8px;
        font-size: 0.9375rem;
        transition: all 0.15s ease;
    }

    .form-control:focus {
        outline: none;
        border-color: #2563eb;
        box-shadow: 0 0 0 3px rgba(37,99,235,0.1);
    }

    .form-check {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .form-check-input {
        width: 16px;
        height: 16px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    .form-check-label {
        font-size: 0.875rem;
        color: #666;
    }

    .btn-submit {
        width: 100%;
        padding: 0.75rem;
        background: #2563eb;
        color: #fff;
        border: none;
        border-radius: 8px;
        font-size: 0.9375rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.15s ease;
    }

    .btn-submit:hover { background: #1d4ed8; }

    .auth-footer {
        text-align: center;
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid #e5e5e5;
    }

    .auth-footer p {
        color: #666;
        font-size: 0.875rem;
    }

    .auth-footer a {
        color: #2563eb;
        font-weight: 500;
        text-decoration: none;
    }

    .auth-footer a:hover { text-decoration: underline; }

    .alert {
        padding: 0.75rem 1rem;
        border-radius: 8px;
        margin-bottom: 1.25rem;
        font-size: 0.875rem;
    }

    .alert-danger {
        background: #fee2e2;
        color: #991b1b;
        border: 1px solid #fecaca;
    }

    .text-danger {
        color: #dc2626;
        font-size: 0.8125rem;
        margin-top: 0.25rem;
        display: block;
    }
</style>

<div class="auth-page">
    <div class="auth-card">
        <div class="auth-header">
            <h1>Welcome back</h1>
            <p>Sign in to your account to continue</p>
        </div>

        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form asp-action="Login" method="post">
            <div class="form-group">
                <label asp-for="Email" class="form-label">Email address</label>
                <input asp-for="Email" class="form-control" placeholder="you@example.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="••••••••" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                    <label asp-for="RememberMe" class="form-check-label">Remember me</label>
                </div>
            </div>

            <button type="submit" class="btn-submit">Sign In</button>
        </form>

        <div class="auth-footer">
            <p>Don't have an account? <a href="/Account/Register">Create account</a></p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

