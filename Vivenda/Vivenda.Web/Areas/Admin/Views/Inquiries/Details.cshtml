@model Vivenda.BLL.DTOs.InquiryDto
@{
    ViewData["Title"] = "Message Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="mb-4">
    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i> Back to Messages
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    @if (!Model.IsRead)
                    {
                        <span class="badge bg-primary me-2">New</span>
                    }
                    @Model.Subject
                </h5>
                <span class="text-muted">@Model.CreatedAt.ToString("MMMM dd, yyyy 'at' HH:mm")</span>
            </div>
            <div class="card-body">
                <div class="mb-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" 
                             style="width: 50px; height: 50px; font-size: 1.2rem;">
                            @(Model.SenderName?.Substring(0, 1).ToUpper() ?? "?")
                        </div>
                        <div>
                            <h6 class="mb-0">@(Model.SenderName ?? "Anonymous")</h6>
                            <small class="text-muted">@(Model.SenderEmail ?? "No email provided")</small>
                        </div>
                    </div>
                </div>
                
                <hr>
                
                <div class="message-content py-3">
                    <p style="white-space: pre-wrap; line-height: 1.8;">@Model.Message</p>
                </div>
            </div>
            <div class="card-footer bg-white">
                <div class="d-flex justify-content-between">
                    <div>
                        @if (!string.IsNullOrEmpty(Model.SenderEmail))
                        {
                            <a href="mailto:@Model.SenderEmail?subject=RE: @Model.Subject" class="btn btn-primary">
                                <i class="fas fa-reply me-1"></i> Reply via Email
                            </a>
                        }
                        @if (!string.IsNullOrEmpty(Model.SenderPhone))
                        {
                            <a href="tel:@Model.SenderPhone" class="btn btn-outline-primary">
                                <i class="fas fa-phone me-1"></i> Call
                            </a>
                        }
                    </div>
                    <form method="post" asp-action="Delete" asp-route-id="@Model.Id">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Delete this message?')">
                            <i class="fas fa-trash me-1"></i> Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <!-- Sender Information -->
        <div class="card mb-4">
            <div class="card-header bg-white">
                <h6 class="mb-0"><i class="fas fa-user me-2"></i>Sender Information</h6>
            </div>
            <div class="card-body">
                <table class="table table-sm table-borderless mb-0">
                    <tr>
                        <td class="text-muted">Name:</td>
                        <td class="text-end fw-medium">@(Model.SenderName ?? "Not provided")</td>
                    </tr>
                    <tr>
                        <td class="text-muted">Email:</td>
                        <td class="text-end">
                            @if (!string.IsNullOrEmpty(Model.SenderEmail))
                            {
                                <a href="mailto:@Model.SenderEmail">@Model.SenderEmail</a>
                            }
                            else
                            {
                                <span>Not provided</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td class="text-muted">Phone:</td>
                        <td class="text-end">
                            @if (!string.IsNullOrEmpty(Model.SenderPhone))
                            {
                                <a href="tel:@Model.SenderPhone">@Model.SenderPhone</a>
                            }
                            else
                            {
                                <span>Not provided</span>
                            }
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        
        <!-- Property Information -->
        <div class="card">
            <div class="card-header bg-white">
                <h6 class="mb-0"><i class="fas fa-home me-2"></i>Related Property</h6>
            </div>
            <div class="card-body">
                <h6 class="mb-2">@Model.PropertyTitle</h6>
                <a href="@Url.Action("Details", "Properties", new { id = Model.PropertyId })" class="btn btn-sm btn-outline-primary">
                    <i class="fas fa-eye me-1"></i> View Property
                </a>
            </div>
        </div>
    </div>
</div>

