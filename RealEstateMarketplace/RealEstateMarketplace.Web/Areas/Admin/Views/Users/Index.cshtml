@model IEnumerable<UserDto>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="mb-0">All Users</h4>
</div>

<div class="card table-card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Roles</th>
                            <th>Status</th>
                            <th>Joined</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="@(user.ProfileImageUrl ?? "https://via.placeholder.com/40x40?text=" + user.FirstName[0])" 
                                             class="rounded-circle me-2" width="40" height="40">
                                        <strong>@user.FullName</strong>
                                    </div>
                                </td>
                                <td>@user.Email</td>
                                <td>@(user.PhoneNumber ?? "N/A")</td>
                                <td>
                                    @foreach (var role in user.Roles)
                                    {
                                        <span class="badge bg-@(role == "Admin" ? "danger" : role == "Agent" ? "info" : "secondary") me-1">
                                            @role
                                        </span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-@(user.IsActive ? "success" : "danger")" id="status-@user.Id">
                                        @(user.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td>@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <div class="btn-group">
                                        <button class="btn btn-sm btn-outline-warning toggle-status" data-id="@user.Id">
                                            <i class="fas fa-toggle-@(user.IsActive ? "on" : "off")"></i>
                                        </button>
                                        @if (!user.Roles.Contains("Admin"))
                                        {
                                            <form asp-action="Delete" asp-route-id="@user.Id" method="post" 
                                                  onsubmit="return confirm('Are you sure you want to delete this user?');"
                                                  style="display: inline;">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-users fa-4x text-muted mb-3"></i>
                <h5>No Users Yet</h5>
                <p class="text-muted">Users will appear here when they register</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $('.toggle-status').click(function() {
            var btn = $(this);
            var id = btn.data('id');
            
            $.post('@Url.Action("ToggleStatus")', { id: id }, function(response) {
                if (response.success) {
                    var statusBadge = $('#status-' + id);
                    var icon = btn.find('i');
                    
                    if (response.isActive) {
                        statusBadge.removeClass('bg-danger').addClass('bg-success').text('Active');
                        icon.removeClass('fa-toggle-off').addClass('fa-toggle-on');
                    } else {
                        statusBadge.removeClass('bg-success').addClass('bg-danger').text('Inactive');
                        icon.removeClass('fa-toggle-on').addClass('fa-toggle-off');
                    }
                }
            });
        });
    </script>
}
