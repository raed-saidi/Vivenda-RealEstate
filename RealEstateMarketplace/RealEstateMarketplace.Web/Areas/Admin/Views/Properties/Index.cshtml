@model IEnumerable<PropertyDto>
@{
    ViewData["Title"] = "Properties";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="mb-0">All Properties</h4>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Add New Property
    </a>
</div>

<div class="card table-card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Property</th>
                            <th>Type</th>
                            <th>Price</th>
                            <th>Status</th>
                            <th>Featured</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var property in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="@(property.MainImageUrl ?? "https://via.placeholder.com/60x60?text=P")" 
                                             class="rounded me-3" width="60" height="60" style="object-fit: cover;">
                                        <div>
                                            <strong>@property.Title</strong>
                                            <br><small class="text-muted">
                                                <i class="fas fa-map-marker-alt me-1"></i>@property.City, @property.State
                                            </small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-@(property.ListingType == "Sale" ? "success" : "info")">
                                        @property.ListingType
                                    </span>
                                    <br><small>@property.PropertyType</small>
                                </td>
                                <td>
                                    <strong>$@property.Price.ToString("N0")</strong>
                                </td>
                                <td>
                                    <span class="badge bg-@(property.Status == "Active" ? "success" : property.Status == "Pending" ? "warning" : "secondary")">
                                        @property.Status
                                    </span>
                                </td>
                                <td>
                                    <button class="btn btn-sm @(property.IsFeatured ? "btn-warning" : "btn-outline-secondary") toggle-featured" 
                                            data-id="@property.Id">
                                        <i class="fas fa-star"></i>
                                    </button>
                                </td>
                                <td>@property.CreatedAt.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@property.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-area="" asp-controller="Properties" asp-action="Details" asp-route-id="@property.Id" 
                                           class="btn btn-sm btn-outline-info" target="_blank">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@property.Id" method="post" 
                                              onsubmit="return confirm('Are you sure you want to delete this property?');"
                                              style="display: inline;">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-building fa-4x text-muted mb-3"></i>
                <h5>No Properties Yet</h5>
                <p class="text-muted">Get started by adding your first property</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Add Property
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $('.toggle-featured').click(function() {
            var btn = $(this);
            var id = btn.data('id');
            
            $.post('@Url.Action("ToggleFeatured")', { id: id }, function(response) {
                if (response.success) {
                    if (response.isFeatured) {
                        btn.removeClass('btn-outline-secondary').addClass('btn-warning');
                    } else {
                        btn.removeClass('btn-warning').addClass('btn-outline-secondary');
                    }
                }
            });
        });
    </script>
}
