@model Dictionary<string, List<RealEstateMarketplace.BLL.DTOs.SettingsDto>>
@{
    ViewData["Title"] = "Site Settings";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">Site Settings</h1>
        <p class="text-muted mb-0">Configure your website settings</p>
    </div>
    <a href="@Url.Action("Create")" class="btn btn-primary">
        <i class="fas fa-plus me-1"></i> Add Setting
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="fas fa-cog fa-3x text-muted mb-3"></i>
            <h5>No Settings Configured</h5>
            <p class="text-muted">Add your first setting to get started.</p>
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Add Setting
            </a>
        </div>
    </div>
}
else
{
    <div class="accordion" id="settingsAccordion">
        @{ var index = 0; }
        @foreach (var category in Model)
        {
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button @(index > 0 ? "collapsed" : "")" type="button" 
                            data-bs-toggle="collapse" data-bs-target="#category-@index">
                        <i class="fas fa-folder me-2"></i>
                        @category.Key
                        <span class="badge bg-secondary ms-2">@category.Value.Count</span>
                    </button>
                </h2>
                <div id="category-@index" class="accordion-collapse collapse @(index == 0 ? "show" : "")" 
                     data-bs-parent="#settingsAccordion">
                    <div class="accordion-body p-0">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Key</th>
                                    <th>Value</th>
                                    <th>Description</th>
                                    <th>Updated</th>
                                    <th width="100">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var setting in category.Value)
                                {
                                    <tr>
                                        <td>
                                            <code>@setting.Key</code>
                                        </td>
                                        <td>
                                            <form method="post" asp-action="Update" class="d-flex">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="key" value="@setting.Key" />
                                                <input type="text" name="value" value="@setting.Value" 
                                                       class="form-control form-control-sm me-2" style="max-width: 300px;">
                                                <button type="submit" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-save"></i>
                                                </button>
                                            </form>
                                        </td>
                                        <td class="text-muted small">@setting.Description</td>
                                        <td class="text-muted small">@setting.UpdatedAt.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            <form method="post" asp-action="Delete" asp-route-key="@setting.Key" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                        onclick="return confirm('Delete this setting?')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            index++;
        }
    </div>
}

<!-- Quick Settings Info -->
<div class="card mt-4">
    <div class="card-header bg-white">
        <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>About Settings</h6>
    </div>
    <div class="card-body">
        <p class="mb-2">Site settings allow you to configure various aspects of your real estate website:</p>
        <ul class="mb-0">
            <li><strong>General:</strong> Site name, description, contact information</li>
            <li><strong>SEO:</strong> Meta titles, descriptions, and keywords</li>
            <li><strong>Email:</strong> SMTP configuration for sending emails</li>
            <li><strong>Social:</strong> Social media links and integration</li>
        </ul>
    </div>
</div>
