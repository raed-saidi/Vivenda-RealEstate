@model RealEstateMarketplace.BLL.DTOs.SettingsDto
@{
    ViewData["Title"] = "Add Setting";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="mb-4">
    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i> Back to Settings
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="fas fa-plus me-2"></i>Add New Setting</h5>
            </div>
            <div class="card-body">
                <form method="post" asp-action="Create">
                    @Html.AntiForgeryToken()
                    
                    <div class="mb-3">
                        <label class="form-label">Key <span class="text-danger">*</span></label>
                        <input type="text" asp-for="Key" class="form-control" placeholder="e.g., site_name" required>
                        <small class="text-muted">Unique identifier for this setting (use underscores, no spaces)</small>
                        <span asp-validation-for="Key" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Value <span class="text-danger">*</span></label>
                        <textarea asp-for="Value" class="form-control" rows="3" required></textarea>
                        <span asp-validation-for="Value" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Category</label>
                        <select asp-for="Category" class="form-select">
                            <option value="General">General</option>
                            <option value="SEO">SEO</option>
                            <option value="Email">Email</option>
                            <option value="Social">Social</option>
                            <option value="Payment">Payment</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <input type="text" asp-for="Description" class="form-control" placeholder="Brief description of this setting">
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i> Create Setting
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
