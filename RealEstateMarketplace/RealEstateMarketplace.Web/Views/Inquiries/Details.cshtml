@model InquiryDto
@{
    ViewData["Title"] = "Inquiry Details";
    var isReceiver = User.Identity?.Name == Model.ReceiverEmail;
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-envelope me-2"></i>Inquiry Details</h2>
                <a asp-action="@(isReceiver ? "Received" : "Sent")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back
                </a>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">@Model.Subject</h5>
                        @if (Model.IsRead)
                        {
                            <span class="badge bg-success">Read</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">New</span>
                        }
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted mb-3">From:</h6>
                            <p class="mb-1"><strong>@Model.SenderName</strong></p>
                            @if (!string.IsNullOrEmpty(Model.SenderEmail))
                            {
                                <p class="mb-1">
                                    <i class="fas fa-envelope me-2"></i>
                                    <a href="mailto:@Model.SenderEmail">@Model.SenderEmail</a>
                                </p>
                            }
                            @if (!string.IsNullOrEmpty(Model.SenderPhone))
                            {
                                <p class="mb-1">
                                    <i class="fas fa-phone me-2"></i>
                                    <a href="tel:@Model.SenderPhone">@Model.SenderPhone</a>
                                </p>
                            }
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted mb-3">About Property:</h6>
                            <a asp-controller="Properties" asp-action="Details" asp-route-id="@Model.PropertyId" class="text-decoration-none">
                                <h6 class="text-primary">@Model.PropertyTitle</h6>
                            </a>
                            <p class="text-muted small mb-0">
                                <i class="fas fa-calendar me-2"></i>
                                Sent on @Model.CreatedAt.ToString("MMMM dd, yyyy 'at' hh:mm tt")
                            </p>
                        </div>
                    </div>

                    <hr>

                    <h6 class="text-muted mb-3">Message:</h6>
                    <div class="bg-light p-4 rounded">
                        <p class="mb-0" style="white-space: pre-wrap;">@Model.Message</p>
                    </div>
                </div>
                <div class="card-footer bg-white">
                    @if (isReceiver)
                    {
                        <div class="d-flex gap-2">
                            <a href="mailto:@Model.SenderEmail?subject=Re: @Model.Subject" class="btn btn-primary">
                                <i class="fas fa-reply me-2"></i>Reply via Email
                            </a>
                            <a href="tel:@Model.SenderPhone" class="btn btn-outline-primary">
                                <i class="fas fa-phone me-2"></i>Call
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">
                            <i class="fas fa-info-circle me-2"></i>
                            The agent will contact you via the email or phone number you provided.
                        </div>
                    }
                </div>
            </div>

            <!-- Property Card -->
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h6 class="mb-0">Property Information</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="https://via.placeholder.com/300x200?text=Property" class="img-fluid rounded" alt="Property">
                        </div>
                        <div class="col-md-8">
                            <h5>@Model.PropertyTitle</h5>
                            <p class="text-muted">Listed by: @Model.ReceiverName</p>
                            <a asp-controller="Properties" asp-action="Details" asp-route-id="@Model.PropertyId" class="btn btn-outline-primary">
                                View Full Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
