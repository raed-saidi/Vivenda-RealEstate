@model IEnumerable<InquiryDto>
@{
    ViewData["Title"] = "My Sent Inquiries";
}

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-paper-plane me-2"></i>My Sent Inquiries</h2>
                <a asp-controller="Properties" asp-action="Index" class="btn btn-outline-primary">
                    <i class="fas fa-search me-2"></i>Browse Properties
                </a>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (!Model.Any())
            {
                <div class="card shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                        <h4 class="text-muted">No Inquiries Sent Yet</h4>
                        <p class="text-muted">Browse properties and send inquiries to agents.</p>
                        <a asp-controller="Properties" asp-action="Index" class="btn btn-primary mt-3">
                            Browse Properties
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Property</th>
                                        <th>Subject</th>
                                        <th>Sent To</th>
                                        <th>Date</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var inquiry in Model)
                                    {
                                        <tr>
                                            <td>
                                                <a asp-controller="Properties" asp-action="Details" asp-route-id="@inquiry.PropertyId" class="text-decoration-none">
                                                    @inquiry.PropertyTitle
                                                </a>
                                            </td>
                                            <td>@inquiry.Subject</td>
                                            <td>@inquiry.ReceiverName</td>
                                            <td>@inquiry.CreatedAt.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                @if (inquiry.IsRead)
                                                {
                                                    <span class="badge bg-success">Read</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark">Pending</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@inquiry.Id" class="btn btn-sm btn-outline-primary" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <form asp-action="Delete" asp-route-id="@inquiry.Id" method="post" class="d-inline" 
                                                      onsubmit="return confirm('Are you sure you want to delete this inquiry?');">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
