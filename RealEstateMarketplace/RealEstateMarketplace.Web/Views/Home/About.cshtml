@{
    ViewData["Title"] = "About Us";
}

<section class="hero-section py-5">
    <div class="container text-center">
        <h1 class="display-4 fw-bold">About Us</h1>
        <p class="lead">Learn more about our company and mission</p>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 mb-4">
                <img src="https://via.placeholder.com/600x400?text=About+Us" class="img-fluid rounded" alt="About Us">
            </div>
            <div class="col-md-6">
                <h2>Welcome to Real Estate Marketplace</h2>
                <p class="lead">Your trusted partner in finding the perfect property.</p>
                <p>We are a leading real estate marketplace dedicated to connecting buyers, sellers, and renters with their ideal properties. With years of experience in the industry, we understand the importance of finding a place to call home.</p>
                <p>Our platform offers a wide range of properties including houses, apartments, condos, and commercial spaces. Whether you're looking to buy, sell, or rent, we're here to help you every step of the way.</p>
                <h5 class="mt-4">Why Choose Us?</h5>
                <ul class="list-unstyled">
                    <li><i class="fas fa-check text-success me-2"></i>Extensive property listings</li>
                    <li><i class="fas fa-check text-success me-2"></i>Expert real estate agents</li>
                    <li><i class="fas fa-check text-success me-2"></i>Transparent pricing</li>
                    <li><i class="fas fa-check text-success me-2"></i>24/7 customer support</li>
                </ul>
            </div>
        </div>
    </div>
</section>
